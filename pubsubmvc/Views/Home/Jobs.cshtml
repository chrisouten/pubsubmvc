@model pubsubmvc.Models.JobModel

@{
    ViewBag.Title = "Jobs";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<h2>Jobs</h2>

@using (Html.BeginForm()) {
    <div>
        <fieldset>
            <legend>Create a Long Running Job</legend>

            <div class="editor-label">
                @Html.LabelFor(m => m.SKU)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.SKU)
                @Html.ValidationMessageFor(m => m.SKU)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Bigness)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Bigness)
                @Html.ValidationMessageFor(m => m.Bigness)
            </div>

            <p>
                <input type="submit" value="Submit Job" />
            </p>
        </fieldset>
    </div>
}